<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Silver"
    android:orientation="vertical"
    android:padding="@dimen/padding"
    tools:context=".M0501">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_10">

        <TextView
            android:id="@+id/m0501_t001"
            android:layout_width="@dimen/固定寬度"
            android:layout_height="wrap_content"
            android:text="@string/m0501_t001"
            android:textSize="24sp" />

        <Spinner
            android:id="@+id/m0501_s001"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:entries="@array/m0501_a001"
            android:prompt="@string/m0501_s001"
            android:spinnerMode="dialog" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_10">

        <TextView
            android:id="@+id/m0501_t002"
            android:layout_width="@dimen/固定寬度"
            android:layout_height="match_parent"
            android:text="@string/m0501_t002"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/m0501_e001"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:ems="10"
            android:gravity="end"
            android:inputType="numberSigned"
            android:textColor="@color/black" />

    </TableRow>

    <Button
        android:id="@+id/m0501_b001"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/Yellow"
        android:padding="@dimen/padding_10"
        android:text="婚姻建議"
        android:textColor="@color/Red"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/m0501_t003"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_10"
        android:text="@string/m0501_t003"
        android:textColor="@color/Red"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/m0500_f000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_10"
        android:text="@string/m0501_f000"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/padding"
        android:gravity="end"
        android:padding="@dimen/padding_10"
        android:text="@string/my_name"
        android:textSize="24sp" />

</LinearLayout>